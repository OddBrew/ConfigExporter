<?xml version="1.0"?>
<config>
    <modules>
        <OddBrew_OddExporter>
            <version>1.0.0</version>
        </OddBrew_OddExporter>
    </modules>
    <global>
        <helpers>
            <oddbrew_oddexporter>
                <class>OddBrew_OddExporter_Helper</class>
            </oddbrew_oddexporter>
        </helpers>
        <blocks>
            <adminhtml>
                <rewrite>
                    <system_config_form_fieldset>OddBrew_OddExporter_Block_Adminhtml_System_Config_Form_Fieldset</system_config_form_fieldset>
                    <system_config_edit>OddBrew_OddExporter_Block_Adminhtml_System_Config_Edit</system_config_edit>
                </rewrite>
            </adminhtml>
            <oddbrew_oddexporter>
                <class>OddBrew_OddExporter_Block</class>
            </oddbrew_oddexporter>
        </blocks>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <oddbrew_oddexporter before="Mage_Adminhtml">OddBrew_OddExporter_Adminhtml</oddbrew_oddexporter>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <oddbrew_oddexporter>
                    <file>oddbrew/oddexporter.xml</file>
                </oddbrew_oddexporter>
            </updates>
        </layout>
    </adminhtml>
</config>